
@model IEnumerable<SellSmartPhone.Models.get_product_discount_Result>
<div class="product-grid-holder">
    <div id="spnoibat">
        @foreach (var item in Model)
        {
            if (item.LoaiSP == 1111)
            {
                <div class="col-sm-4 col-md-3  no-margin product-item-holder hover">
                    <div class="product-item">
                        @if (item.Giamgia != null)
                        {
                            <div class="ribbon green"><span>Giảm @item.Giamgia %</span></div>
                        }
                        @if (item.Isnew != 0)
                        {
                            <div class="ribbon blue"><span>Mới nhập</span></div>
                        }
                        @if (item.Ishot != 0)
                        {
                            <div class="ribbon red"><span>Hot</span></div>
                        }
                        <div class="image">
                            <img alt="@item.TenSP" src="/image/smartphone/@item.tenhang.Replace(" ",string.Empty).ToLower()/@item.Anh">
                        </div>
                        <div class="body">
                            <div class="label-discount clear"></div>
                            <div class="title">
                                <a href="#">@item.TenSP</a>
                            </div>

                        </div>
                        @if (item.Giamgia != null)
                        {
                            <div class="prices">
                                <div class="price-prev">@string.Format("{0:0,0}", item.Gia)  VNĐ</div>
                                <div class="price-current text-right"> @string.Format("{0:0,0}", item.giá_mới)  VNĐ</div>
                            </div>
                        }
                        else
                        {
                            <div class="prices">
                                <div class="price-current text-right"> @string.Format("{0:0,0}", item.Gia) VNĐ</div>
                            </div>
                        }
                        <div class="hover-area">
                            <div class="add-cart-button">
                                <a href="#" class="le-button">Cho vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-sm-4 col-md-3  no-margin product-item-holder hover">
                    <div class="product-item">
                        @if (item.Giamgia != null)
                        {
                            <div class="ribbon green"><span>Giảm @item.Giamgia %</span></div>
                        }
                        @if (item.Isnew != 0)
                        {
                            <div class="ribbon blue"><span>Mới nhập</span></div>
                        }
                        @if (item.Ishot != 0)
                        {
                            <div class="ribbon red"><span>Hot</span></div>
                        }
                        <div class="image">
                            <img alt="@item.TenSP" src="/image/@item.TenLoai/@item.Anh">
                        </div>
                        <div class="body">
                            <div class="label-discount clear"></div>
                            <div class="title">
                                <a href="#">@item.TenSP</a>
                            </div>

                        </div>
                        @if (item.Giamgia != null)
                        {
                            <div class="prices">
                                <div class="price-prev">@string.Format("{0:0,0}", item.Gia)  VNĐ</div>
                                <div class="price-current text-right"> @string.Format("{0:0,0}", item.giá_mới)  VNĐ</div>
                            </div>
                        }
                        else
                        {
                            <div class="prices">
                                <div class="price-current text-right"> @string.Format("{0:0,0}", item.Gia) VNĐ</div>
                            </div>
                        }
                        <div class="hover-area">
                            <div class="add-cart-button">
                                <a href="#" class="le-button">Cho vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>