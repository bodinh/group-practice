
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Iconcart{
    @{ Html.RenderAction("viewBasket", "navbar");}
}

<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row" style="border-color:cadetblue;border-style:double;border-radius:20px">

            <div class="col-md-6">
                <section class="section sign-in inner-right-xs">
                    <form action="/Register/SubmitPassword" method="post" role="form" class="login-form cf-style-1">
                        <div class="field-row">
                            <label>Email</label>
                            @if (TempData["email"] != null)
                            {
                                <input type="email" style="background-color:Silver" name="Email" required="" class="le-input" value="@TempData["email"]">
                            }
                            else
                            {
                                <input type="email" style="background-color:Silver" name="Email" required="" class="le-input">
                            }

                        </div><!-- /.field-row -->

                        <div class="field-row clearfix">
                            @if (TempData["alert"] != null)
                            {
                                <span style="color:#66FF00;font-weight:700"> @TempData["alert"] </span>
                            }
                            @if(TempData["warning"] != null)
                            {
                                <span style="color:#FF3300;font-weight:700"> @TempData["warning"] </span>
                            }
                        </div>

                        <div class="buttons-holder">
                            <button type="submit" class="le-button huge">Submit</button>
                        </div><!-- /.buttons-holder -->
                    </form><!-- /.cf-style-1 -->
                    </section>
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container -->
</main><!-- /.authentication -->
