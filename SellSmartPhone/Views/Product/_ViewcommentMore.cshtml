@model IEnumerable<SellSmartPhone.Models.get_comment_Result1>
@foreach (var item in Model)
{
    if (item.MaKH != null)
    {
        <div class="comment-item">
            <div class="row no-margin">
                <div class="col-lg-1 col-xs-12 col-sm-2 no-margin">
                    <div class="avatar">
                        <img alt="avatar" src="/template/assets/images/@item.Avatar ">

                    </div><!-- /.avatar -->
                </div><!-- /.col -->

                <div class="col-xs-12 col-lg-11 col-sm-10 no-margin">
                    <div class="comment-body">
                        <div class="meta-info">
                            <div class="author inline">
                                <a href="#" class="bold">@item.Hoten</a>


                            </div>
                            <div class="star-holder inline">

                            </div>
                            <div class="date inline pull-right">
                                @item.Ngaydang
                            </div>
                        </div><!-- /.meta-info -->
                        <p class="comment-text">
                            @item.Noidung
                        </p><!-- /.comment-text -->
                    </div><!-- /.comment-body -->
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.comment-item --><div style="padding-left: 100px">
        </div>
        <hr>
    }
    else
    {
        <div class="comment-item">
            <div class="row no-margin">
                <div class="col-lg-1 col-xs-12 col-sm-2 no-margin">
                    <div class="avatar">
                        <img alt="avatar" src="/template/assets/images/default-avatar.jpg ">

                    </div><!-- /.avatar -->
                </div><!-- /.col -->

                <div class="col-xs-12 col-lg-11 col-sm-10 no-margin">
                    <div class="comment-body">
                        <div class="meta-info">
                            <div class="author inline">
                                <a href="#" class="bold">@item.Hoten</a>


                            </div>
                            <div class="star-holder inline">

                            </div>
                            <div class="date inline pull-right">
                                @item.Ngaydang
                            </div>
                        </div><!-- /.meta-info -->
                        <p class="comment-text">
                            @item.Noidung
                        </p><!-- /.comment-text -->
                    </div><!-- /.comment-body -->
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.comment-item --><div style="padding-left: 100px">
        </div>
        <hr>
    }

}
@{
    int x = int.Parse(Session["countcmt"].ToString());
    x = x + 2;
    Session["countcmt"] = x;
}