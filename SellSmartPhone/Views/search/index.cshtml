@using PagedList.Mvc;
@model PagedList.IPagedList<SellSmartPhone.Models.get_product_discount_Result>
@{
    ViewBag.Title = "result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Iconcart{
    @{ Html.RenderAction("viewBasket", "navbar");}
}
<div>

    <section id="category-grid" class="">
        <div class="container">


            <!-- ========================================= SIDEBAR ========================================= -->
            @{Html.RenderAction("result", "searchAdvanced");}
            <!-- ========================================= SIDEBAR : END ========================================= -->
            <!-- ========================================= CONTENT ========================================= -->
            <div class="col-xs-12 col-sm-9 no-margin wide sidebar">
                <!-- ========================================= CONTENT ========================================= -->
                <!-- /.carousel-holder -->
                <section id="gaming">
                    <div class="grid-list-products">
                        <h2 class="section-title">Kết quả tìm kiếm</h2>
                        <div class="control-bar">
                            <div id="popularity-sort" class="le-select">
                                <select onchange="location = this.value;">
                                    <option>Tuỳ chọn sắp xếp</option>
                                    <option value="/search/index?sort=hang&id=@Session["id"]&mahang=@Session["mahang"]&type=@Session["type"]&btnsearch=@Session["btnsearch"]&searchAdvanced=@Session["searchAdvanced"]">Sắp xếp theo hãng</option>
                                    <option value="/search/index?sort=gia&id=@Session["id"]&mahang=@Session["mahang"]&type=@Session["type"]&btnsearch=@Session["btnsearch"]&searchAdvanced=@Session["searchAdvanced"]">Sắp xếp theo giá</option>
                                </select>
                            </div>
                            <div id="item-count" class="le-select">
                                <select onchange="location = this.value;">
                                    <option>Tuỳ chọn kiểu sắp xếp</option>
                                    <option value="/search/index?type=tang&id=@Session["id"]&mahang=@Session["mahang"]&sort=@Session["sort"]&btnsearch=@Session["btnsearch"]&searchAdvanced=@Session["searchAdvanced"]">Tăng dần</option>
                                    <option value="/search/index?type=giam&id=@Session["id"]&mahang=@Session["mahang"]&sort=@Session["sort"]&btnsearch=@Session["btnsearch"]&searchAdvanced=@Session["searchAdvanced"]">Giảm dần</option>
                                </select>
                            </div>
                        </div><!-- /.control-bar -->

                        <div class="tab-content">
                            <div class="products-grid fade tab-pane active in">
                                @{Html.RenderAction("resultproduct", new { id = Session["id"], btnsearch = Session["btnsearch"], mahang = Session["mahang"] });}
                            </div><!-- /.products-list -->
                        </div><!-- /.products-grid #list-view -->
                    </div><!-- /.tab-content -->
                </section><!-- /#gaming -->
                <!-- ========================================= CONTENT : END ========================================= -->
            </div><!-- /.col -->
            <!-- ========================================= CONTENT : END ========================================= -->
        </div><!-- /.container -->
    </section><!-- /#category-grid -->
</div>
<script>
    document.title = 'Tìm kiếm sản phẩm'
</script>
