@model SellSmartPhone.Models.Account
    <form action="/Account/ImageUser" enctype="multipart/form-data" method="post">
        <div class="col-md-4">
            <label class="control-label" for="Avatar">Ảnh đại diện</label>


            <div style="text-align:center; margin:20px">
                @if (Model.Avatar.Contains("http") == true)
                {
                    <img alt="@Model.Avatar" src="@Model.Avatar.Replace(" ",string.Empty)" style="width: 256px; height: 256px; -webkit-border-radius: 123px; /* Saf3+, Chrome */ border-radius: 123px; /* Opera 10.5, IE 9 */ /*-moz-border-radius: 30px;  Disabled for FF1+ */ ">
                }
                else
                {
                    <img alt="@Model.Avatar" src="/template/assets/images/@Model.Avatar" style="width: 256px; height: 256px; -webkit-border-radius: 123px; /* Saf3+, Chrome */ border-radius: 123px; /* Opera 10.5, IE 9 */ /*-moz-border-radius: 30px;  Disabled for FF1+ */ ">
                }

            </div>
            <div class="form-group">
                <input type="file" name="file">
            </div>
            <div class="form-group">
                <input type="submit" value="Tải lên" class="le-button">
            </div>
        </div>
    </form>