
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Iconcart{
    @{ Html.RenderAction("viewBasket", "navbar");}
}

<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <p class="text-success"></p>
        <div class="row">
            <div class="col-md-12">
                <p>Bạn đang đăng nhập với tên <strong>@ViewBag.user.Hoten</strong>.</p>
                <form action="/Account/Manage" class="form-horizontal" method="post">

                    <h4>Thay đổi mật khẩu</h4>
                    <hr>
                    <div class="validation-summary-valid" data-valmsg-summary="true">
                        <ul>
                            <li style="display:none"></li>
                        </ul>
                    </div>    <div class="form-group">
                        <label class="col-md-2 control-label" for="OldPassword">Mật khẩu hiện tại</label>
                        <div class="col-md-3">
                            <input class="le-input" name="OldPassword" type="password" required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="NewPassword">Mật khẩu mới</label>
                        <div class="col-md-3">
                            <input class="le-input" name="NewPassword" type="password" required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="ConfirmPassword">Nhập lại mật khẩu</label>
                        <div class="col-md-3">
                            <input class="le-input" name="ConfirmPassword" type="password" required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu thay đôi" class="le-button huge">
                        </div>
                    </div>
                </form>
                <section id="externalLogins">

                    <h4>Đăng nhập bằng tài khoản khác</h4>

                    <form action="#" method="post">
                        <div id="socialLoginList">
                            <p>
                            </p><div class="col-md-6">
                                <button type="submit" class="btn-block btn-lg btn btn-facebook" id="Facebook" name="provider" value="Facebook" title="Đăg nhập bằng tài khoản Facebook của bạn"><i class="fa fa-facebook"></i>Facebook</button>
                            </div>

                            <p></p>
                        </div>
                    </form>

                </section>
            </div>
        </div>
    </div>
</main>
<script>
    document.title = 'Chỉnh sửa thông tin'
</script>

